<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% 3.times do |time| %>
      <% if @products[time].images[1] %>
        <li data-target="#myCarousel" data-slide-to="<%= time %>" <% if time == 1 %> class="active" <% end %>></li>
      <% end %>
    <% end %>
  </ol>
  <div class="carousel-inner" role="listbox">
    <% 3.times do |time| %>
      <% if @products[time].images[1] %>
          <div <% if time == 1 %> class="item active" <% else %> class="item" <% end %>>
            <%= link_to(product_path(@products[time])) do %>
            <div class="carousel-image" style="background: url('<%= @products[time].images[1] %>') left bottom no-repeat; background-size: cover;"></div>
            <div class="container">
              <div class="carousel-caption">
                <h1><%= @products[time].descriptions[0] %></h1>
              </div>
            </div>
            <% end %>
          </div>
      <% end %>
    <% end %>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<div class="thumbnails">
  <% if @products.length > 3 %>
    <% 4.times do |time| %>
      <% if @products[time].images[0] %>
        <div class="col-xs-3" style="background: url('<%= product.images[0] %>') center no-repeat; background-size:cover">
        </div>
      <%end %>
    <% end %>
    <% elsif @products.length > 0 %>
      <% @products.each_with_index do |product, index| %>
        <% if product.images[0] %>
          <div class="thumb col-xs-<%= 12/@products.length %>" style="background: url('<%= product.images[0] %>') center no-repeat; background-size:cover">
          </div>
        <%end %>
      <% end %>
  <% end %>
</div>
